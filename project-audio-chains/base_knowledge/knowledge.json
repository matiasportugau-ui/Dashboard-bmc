  "module_catalog": {
    "eq-eight": {
      "name": "EQ Eight",
      "category": "equalizer",
      "recommended_use": "Tonal shaping and surgical cleanup at the start of the chain.",
      "default_parameters": {
        "low_cut_hz": 30,
        "mid_notch_hz": 250,
        "high_shelf_hz": 14500,
        "gain_staging_db": 0.0
      }
    },
    "multiband-dynamics": {
      "name": "Multiband Dynamics",
      "category": "dynamics",
      "recommended_use": "Transparent control of low, mid and high energy bands.",
      "default_parameters": {
        "crossover_hz": [120, 5500],
        "low_band_range_db": [-3.5, 1.5],
        "mid_band_range_db": [-2.5, 1.5],
        "high_band_range_db": [-1.5, 0.5]
      }
    },
    "glue-compressor": {
      "name": "Glue Compressor",
      "category": "dynamics",
      "recommended_use": "Final bus cohesion with subtle compression.",
      "default_parameters": {
        "attack_ms": 3.0,
        "release_mode": "auto",
        "ratio": 2.0,
        "make_up_db": 1.5
      }
    },
    "saturator": {
      "name": "Saturator",
      "category": "color",
      "recommended_use": "Parallel or gentle full-band saturation for harmonic content.",
      "default_parameters": {
        "mode": "analog_clip",
        "drive_db": 1.5,
        "dry_wet": 15
      }
    },
    "utility": {
      "name": "Utility",
      "category": "utility",
      "recommended_use": "Stereo image control, gain trim and mono-below routing.",
      "default_parameters": {
        "stereo_width_percent": 115,
        "mono_below_hz": 120,
        "gain_db": 0.0
      }
    },
    "limiter": {
      "name": "Limiter",
      "category": "limiter",
      "recommended_use": "True-peak safe output ceiling at the end of the chain.",
      "default_parameters": {
        "ceiling_db": -0.8,
        "lookahead_ms": 1.0,
        "release_ms": 100
      }
    }
  },
  "macro_templates": {
    "LowCut": {"unit": "Hz", "range": [20, 120], "description": "Controls high-pass filtering before dynamics."},
    "Dynamics": {"unit": "%", "range": [0, 100], "description": "Adjusts global multiband input drive."},
    "Glue": {"unit": "%", "range": [0, 100], "description": "Sets bus compression intensity."},
    "Exciter": {"unit": "%", "range": [0, 50], "description": "Amount of harmonic saturation applied."},
    "Stereo": {"unit": "%", "range": [80, 140], "description": "Stereo widening beyond the mono bass crossover."},
    "Ceiling": {"unit": "dB", "range": [-2.0, -0.3], "description": "Limiter output ceiling."},
    "Drive": {"unit": "dB", "range": [0, 30], "description": "Additional saturation drive for guitar-heavy mixes."},
    "Presence": {"unit": "dB", "range": [-3.0, 3.0], "description": "High-shelf gain for vocal and guitar clarity."},
    "Width": {"unit": "%", "range": [90, 130], "description": "Stereo control tuned for hip-hop masters."}
  },
