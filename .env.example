# Configuración del Servidor
NODE_ENV=development
PORT=5000

# Base de Datos
MONGODB_URI=mongodb://localhost:27017/dashboard_bmc
MONGODB_TEST_URI=mongodb://localhost:27017/dashboard_bmc_test

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here

# Autenticación OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=dashboard@yourcompany.com

# Archivos y Storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv
UPLOAD_PATH=uploads/

# API Keys Externas
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINANCIAL_MODELING_PREP_API_KEY=your-fmp-api-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key

# Configuración de Seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración del Cliente (Frontend)
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Configuración de Logs
LOG_LEVEL=debug
LOG_FILE=logs/dashboard.log

# Configuración de Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Configuración de Colas
QUEUE_PROVIDER=redis
QUEUE_URL=redis://localhost:6379

# Configuración de Notificaciones
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_PUBLIC_KEY=your-push-public-key
PUSH_PRIVATE_KEY=your-push-private-key

# Configuración de Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configuración de Monitoreo
MONITORING_ENABLED=true
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key