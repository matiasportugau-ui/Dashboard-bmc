{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@tools/*": ["tools/*"],
      "@integrations/*": ["integrations/*"],
      "@automation/*": ["automation/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "tools/**/*",
    "integrations/**/*",
    "automation/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*.test.ts"
  ]
}